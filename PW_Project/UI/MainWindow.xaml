<Window x:Class="Urbaniak.PW_project.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urbaniak.PW_project.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Producents">
                <MenuItem Header="Display" Click="ProducentsDisplay" />
                <MenuItem Header="Create"/>
                <MenuItem Header="Update"/>
                <MenuItem Header="Delete"/>
            </MenuItem>
            <MenuItem Header="Products">
                <MenuItem Header="Display" Click="ProductsDisplay"/>
                <MenuItem Header="Create"/>
                <MenuItem Header="Update"/>
                <MenuItem Header="Delete"/>
            </MenuItem>
        </Menu>
        <DataGrid Name="ContentDataGrid" AutoGenerateColumns="True" />
    </DockPanel>
</Window>
